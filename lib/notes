class School

  attr_accessor :grade, :student
  attr_reader :school_name

  
  ROSTER = {}
  ROSTER[@grade] = []
  #ROSTER[:cherries] = []


  def initialize(school_name)
    @name = school_name
    @grade = grade
    @student = student
  end

 def add_student(student, grade)
   
   
  
  def print_roster
    ROSTER.each do |grade, student|
      puts ROSTER
    end
  end

end

dec = School.new("Decatur")

